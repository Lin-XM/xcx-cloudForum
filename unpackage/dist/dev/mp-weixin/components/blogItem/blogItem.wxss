.blogWrapper .head {
  display: flex;
  font-size: 32rpx;
  align-items: center;
  justify-content: space-between;
}
.blogWrapper .head .userInfo {
  display: flex;
  align-items: center;
}
.blogWrapper .head .userInfo .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
}
.blogWrapper .head .userInfo .avatar image {
  width: 100%;
  height: 100%;
  display: block;
}
.blogWrapper .head .userInfo .name {
  color: #222;
  padding-left: 10rpx;
}
.blogWrapper .head .userInfo .time {
  color: #888;
  font-size: 32rpx;
  padding-left: 20rpx;
}
.blogWrapper .head .more {
  padding: 5rpx;
}
.blogWrapper .head .more .iconfont {
  font-size: 50rpx;
  color: #888;
}
.blogWrapper .body {
  padding: 15rpx 0 30rpx;
}
.blogWrapper .body .title {
  font-size: 40rpx;
  color: #000;
  font-weight: 600;
  text-align: justify;
}
.blogWrapper .body .title .textItem {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: hidden;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.blogWrapper .body .picList {
  display: flex;
  padding-top: 20rpx;
}
.blogWrapper .body .picList .pic {
  width: 225rpx;
  height: 225rpx;
  margin-right: 6rpx;
  overflow: hidden;
}
.blogWrapper .body .picList .pic image {
  height: 100%;
  width: 100%;
}
.blogWrapper .body .picList .pic:first-child {
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.blogWrapper .body .picList .pic:last-child {
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.blogWrapper .body .picList .pic:only-child {
  border-radius: 20rpx;
}
.blogWrapper .footer {
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #333;
}
.blogWrapper .footer .box {
  display: flex;
  align-items: center;
  padding: 15rpx 0 0 5px;
  flex: 1;
  justify-content: center;
}
.blogWrapper .footer .box .iconfont {
  font-size: 40rpx;
  padding-right: 12rpx;
}

